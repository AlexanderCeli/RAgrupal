<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE9494"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9E1212"
        android:gravity="center_horizontal"
        android:text="Instituto Superior Tecnolgico Loja"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F6EEEE"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="358dp"
            android:layout_height="107dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cropped_icono_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botcam"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_margin="80dp"
            android:background="#9E1212"
            android:text="Jugar"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            android:visibility="visible"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botayuda"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="90dp"
            android:background="#9E1212"
            android:gravity="clip_vertical"
            android:hapticFeedbackEnabled="false"
            android:text="ayuda"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#329CAA"
            android:textColorLink="#348FB8"
            android:textSize="38sp"
            android:textStyle="bold|italic"
            android:visibility="visible"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="309dp"
            android:layout_height="216dp"
            android:layout_margin="50dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textMultiLine"
            android:text="Enfoca un controlador Numark mistack platinuin fx"
            android:textColor="#9E1212"
            android:textSize="24sp"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>










